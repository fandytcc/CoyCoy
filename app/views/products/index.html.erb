<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="https://picsum.photos/200/300/?random" alt="random image">
        <div class="caption">
          <h3><%= product.name %></h3>
          <p> Price: $ <%= product.price %> </p>
          <p><%= link_to "VIEW", product, class: "btn btn-primary"%>
          <%= link_to "+ ADD TO CART", product, class: "btn btn-info"%></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- pagination buttons -->
<nav aria-label="...">
  <ul class="pagination">
    <li class="disabled">
      <span>
        <span aria-hidden="true">&laquo;</span>
      </span>
    </li>
    <li class="active">
      <span>1 <span class="sr-only">(current)</span></span>
    </li>
    ...
  </ul>
</nav>
